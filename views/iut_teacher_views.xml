    <!-- Vue form -->
    <record model="ir.ui.view" id="iut.dip.teacher_form_view">
        <field name="name">iut.dip.teacher.form</field>
        <field name="model">iut.dip.teacher</field>
        <field name="arch" type="xml">
            <form string="Professeur">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span class="oe_inline">Profs/span>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="classe_ids" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue tree -->
    <record model="ir.ui.view" id="iut.dip.teacher_tree_view">
      <field name="name">iut.dip.teacher.tree</field>
      <field name="model">iut.dip.teacher</field>
      <field name="arch" type="xml">
        <tree string="Professeur">
            <field name="name" />
            <field name="classe_ids" />
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record id="iut.dip.teacher_action" model="ir.actions.act_window">
    	<field name="name">Professeur</field>
    	<field name="type">ir.actions.act_window</field>
    	<field name="res_model">iut.dip.teacher</field>
    	<field name="view_type">form</field>
    	<field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>
